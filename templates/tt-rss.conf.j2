<VirtualHost *:80>
  ServerName {{ ttrss_self_url }}

  DocumentRoot {{ ttrss_install_path }}

  <Directory {{ ttrss_install_path }}/>
    Options FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    allow from all
  </Directory>

  ErrorLog ${APACHE_LOG_DIR}/ttrss_error.log
  CustomLog ${APACHE_LOG_DIR}/ttrss_access.log combined
</VirtualHost>